<!DOCTYPE html>
<html>
<head>
  <title>Twtr</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="container">
		<% if flash.any? %>
			<div class="messages">
				<% flash.each do |k,v| %>
				<div class="<%= k %>"><%= v %></div>
				<% end %>
			</div>
		<% end %>
		
		<%= yield %>
	</div>



</body>
</html>
